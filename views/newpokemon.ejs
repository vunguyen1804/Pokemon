<%- include("partials/header") %>

    <div class="container">

        <div class="jumbotron">

            <h1 style="text-align: center">Adding a New Pokemon</h1>

            <div style="width: 30%; margin: 25px auto;">

                <form action="/:<%= trainerID %>?_method=PUT" method="POST">
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="Name" placeholder="Pokemon Name" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="Move" placeholder="Move" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="Img" placeholder="Image Url" required>
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="number" name="ID" placeholder="Pokemon ID" required>
                    </div>

                    <div class="form-group">
                        <select class="form-control" name="Type" required>
                            <option value = "" disabled selected>Choose Type</option>
                            <option value =  "Fire">Fire</option>
                            <option value = "Water">Water</option>
                            <option value = "Grass">Grass</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>

                </form>
                
                <a href="/index">Go Back</a>

            </div>

        </div>

    </div>

<%- include("partials/footer") %>